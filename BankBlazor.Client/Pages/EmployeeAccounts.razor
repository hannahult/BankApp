@page "/accounts"
@inject HttpClient HttpClient
@using BankBlazor.Client.ViewModels

<h2 class="text-center my-4">All Accounts</h2>

@if (isLoading)
{
    <div class="text-center">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p>Loading accounts...</p>
    </div>
}
else if (Accounts == null || !Accounts.Any())
{
    <p>No accounts found.</p>
}
else
{
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Account ID</th>
                <th>Balance</th>
                <th>Frequency</th>
                <th>Created</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in Accounts)
            {
                <tr>
                    <td>@a.AccountId</td>
                    <td>@a.Balance.ToString("C")</td>
                    <td>@a.Frequency</td>
                    <td>@a.Created.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<AccountReadViewModel> Accounts = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            Accounts = await HttpClient.GetFromJsonAsync<List<AccountReadViewModel>>("https://localhost:7127/api/account/all");
        }
        catch (Exception ex)
        {
            Console.WriteLine("Error loading accounts: " + ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }
}
